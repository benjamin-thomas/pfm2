{
  "name": "pfm2",
  "version": "1.0.0",
  "description": "Personal Finance Manager - Simplified TypeScript rewrite",
  "type": "module",
  "scripts": {
    "dev:server": "BE_PORT=8086 BE_HOST=localhost FE_BASE_URL=http://localhost:5176 tsx watch src/server/main.ts",
    "dev:server:lan": "BE_PORT=8086 BE_HOST=0.0.0.0 FE_BASE_URL=http://192.168.52.74:5176 tsx watch src/server/main.ts",
    "dev:client": "FE_PORT=5176 FE_HOST=localhost BE_BASE_URL=http://localhost:8086 vite",
    "dev:client:lan": "FE_PORT=5176 FE_HOST=0.0.0.0 BE_BASE_URL=http://192.168.52.74:8086 vite",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:lan": "concurrently \"npm:dev:server:lan\" \"npm:dev:client:lan\"",
    "build:server": "tsc -p tsconfig.server.json --noUnusedLocals false --noUnusedParameters false",
    "build:server:strict": "tsc -p tsconfig.server.json",
    "build:client": "tsc && vite build",
    "build": "npm run build:server && npm run build:client",
    "build:strict1": "npm run lint && npm run build:server:strict && npm run build:client",
    "build:strict2": "knip && npm run build:strict1",
    "tsc": "tsc --build tsconfig.json tsconfig.server.json",
    "tsc:watch": "tsc --build tsconfig.json tsconfig.server.json --watch",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui --coverage",
    "lint": "biome lint .",
    "cli": "tsx src/cli/main.ts",
    "repl": "tsx src/cli/repl.ts"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "elm-decoders": "^6.1.2",
    "express": "^4.21.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.1.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.1.2",
    "happy-dom": "^20.0.0",
    "knip": "^5.64.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
